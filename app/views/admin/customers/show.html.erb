<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h1>

<h2>会員詳細</h2>
		<table class='table'>
		  <tr>
		    <td>会員id</td>
        <td>
          <%= @customer.id %><br>
        </td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%=@customer.postal_code  %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>退会ステータス</td>
        <% if !@customer.is_active  %>
        <td>退会済み</td>
        <% else %>
        <td>退会していません</td>
        <% end %>
      </tr>
      <tr>
        <td><%= link_to '編集する', edit_admin_customer_path(@customer) %></td>
      </tr>
    </table>
  </div>
</div>

