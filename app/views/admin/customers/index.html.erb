<h1>会員一覧</h1>

<table class='table'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.first_name,admin_customer_path(customer) %><%= link_to customer.last_name,admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <% if !customer.is_active  %>
        <td>退会済み</td>
        <% else %>
        <td>退会していません</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>