<h1>商品新規登録</h1>

<%= form_with model:@item ,url: admin_items_path, method: :post do |f| %>

　<div class="field">
    <%= f.label :images_images %>
    <%= f.attachment_field :images_images, multiple: true %>
  </div>

  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :商品説明 %>
    <%= f.text_field :introduction %>
  </div>

  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id , Genre.all,:id,:name ,include_blank: "選択してください" %>
  </div>

  <div class="field">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price %>円
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>