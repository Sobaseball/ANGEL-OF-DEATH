  <div id="wrap">
  <ul id="slider">
    <% Image.where(item_id: @item.id).each do |item| %>
    <%#= attachment_image_tag(image, Refile.attachment_url(Image.find(1), :images), :fill, 100, 100) %>
    <li class="thumbnail-item"><%= image_tag(Refile.attachment_url(item, :images), size: "260x260") %></li>
    <% end %>

  </ul>
  <ul id="thumbnail-list">
  <% Image.where(item_id: @item.id).each do |item| %>
    <li class="thumbnail-item"><%= image_tag(Refile.attachment_url(item, :images), size: "78x78") %><%#= attachment_image_tag(item, :image, :fill, 100, 100) %></li>
  <% end %>
  </ul>
 </div>


<div class='col-xs-9'>
		<h2>商品詳細</h2>
		<table class='table'>
		  <tr>
        <td>
          <%#= attachment_image_tag(@item, :image, :fill, 100, 100) %><br>
        </td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>（税抜価格）</td>
        <td><%= @item.price %></td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <% if @item.is_active == nil %>
        <td>販売中</td>
        <% else %>
        <td>販売停止中</td>
        <% end %>
      </tr>
      <tr>
        <td><%= link_to '編集する', edit_admin_item_path(@item) %></td>
      </tr>
    </table>
  </div>
</div>