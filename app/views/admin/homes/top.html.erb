<h1>注文履歴一覧</h1>

<table class='table'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at,admin_order_path(order) %></td>

        <td>
          <%= order.customer.first_name %>
          <%= order.customer.last_name %>
        </td>
        <% amount_all = 0 %>
        <td>
            <% order.order_items.each do |order_item| %>
             <% amount_all += order_item.amount %>
            <% end %>
            <%= amount_all %>
        </td>
        <td><%= order.is_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>