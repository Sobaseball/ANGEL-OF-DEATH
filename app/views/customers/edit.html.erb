<h1>会員情報編集</h1>

<%= form_with model:@customer ,url: customers_update_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label :first_name, "(姓)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "カナ" %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :last_name, "名" %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "カナ" %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% if customer_signed_in? && @customer == current_customer %>
        <%= link_to "退会", customers_destroy_path, class: "btn btn-outline-danger" %>
<% end %>

<% end %>
