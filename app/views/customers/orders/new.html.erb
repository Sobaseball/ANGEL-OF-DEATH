<h1>注文情報入力</h1>

<%= form_with(model: @order,url: customers_orders_check_path, :method => :get, local: true) do |f| %>

<h2>支払い方法</h2>
<%= f.radio_button :payment, "銀行振り込み" %>
<%= f.label :payment, "銀行振り込み" %>

<h2>お届け先</h2>
<%= f.radio_button :address_option, 0 %>
<%= f.label :payment, "ご自身の住所" %></br>
<%= current_customer.postal_code %>
<%= current_customer.address %></br>
<%= current_customer.first_name %><%= current_customer.last_name %></br>


<%= f.radio_button :address_option, 1 %>
<%= f.label :payment, "登録済み住所から選択" %></br>
<%= f.label :登録先 %>
<%= f.collection_select :address_id, current_customer.addresses.all, :id, :address,include_blank: "選択してください" %></br>


<%= f.radio_button :address_option, 2 %>
<%= f.label :payment, "新しいお届け先" %></br>
<%= f.label :郵便番号（ハイフンなし） %>
<%= f.text_field :shipping_postalcode %></br>
<%= f.label :住所 %>
<%= f.text_field :shipping_address %></br>
<%= f.label :宛名 %>
<%= f.text_field :superscription %>

<%= f.submit "確認画面へ" %>
<% end %>

