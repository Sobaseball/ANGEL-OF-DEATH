<h1>配送先編集</h1>

<%= form_with model: @address, url: customers_address_path(@address), method: :patch do |f| %>
  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "変更内容を保存" %>
  </div>

<% end %>