<h1>配送先登録/一覧</h1>

<%= form_with model:@address, url: customers_addresses_path, method: :post, local:true do |f| %>
<%= f.label :郵便番号（ハイフンなし） %>
<%= f.text_field :postal_code %></br>
<%= f.label :住所 %>
<%= f.text_field :address %></br>
<%= f.label :宛名 %>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>

      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "削除", customers_address_path(address), method: :delete %>
          <%= link_to '編集する', edit_customers_address_path(address) %></td>
      </tr>
    <% end %>
  </tbody>
</table>